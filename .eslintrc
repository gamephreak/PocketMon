{
  "extends": [
    "plugin:react/recommended",
    "@pkmn"
  ],
  "env": {
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "rules": {
    "react/no-unknown-property": ["error", { "ignore": ["class"] }],
  },
  "settings": {
    "react": {
        "pragma": "h",
        "version": "detect"
    }
  }
}